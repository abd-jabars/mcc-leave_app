
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MCC Leave System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/atlantis.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Zen%20Maru%20Gothic&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
</head>

<body>
    <div class="wrapper">
        <div class="main-header">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="dark2">
                <a href="/" class="navbar-brand">
                    <img src="https://99designs-start-assets.imgix.net/images/homepage/pro/studio-fc609f1df7.png?auto=format&ch=Width%2CDPR&w=742&h=524&dpr=1" alt="MCC LEAVE" width="100" height="50" />
                </a>
                <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="icon-menu"></i>
                    </span>
                </button>
                <button class="topbar-toggler more"><i class="icon-options-vertical"></i></button>
                <div class="nav-toggle">
                    @*<button class="btn btn-toggle toggle-sidebar">
                            <i class="icon-menu"></i>
                        </button>*@
                </div>
            </div>
            <!-- End Logo Header -->
            <!-- Navbar Header -->
            <nav class="navbar navbar-header navbar-expand-lg" data-background-color="dark">

                <div class="container-fluid">
                    <div class="collapse" id="search-nav">
                        <form class="navbar-left navbar-form nav-search mr-md-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-search pr-1">
                                        <i class="fa fa-search search-icon"></i>
                                    </button>
                                </div>
                                <input type="text" placeholder="Search ..." class="form-control">
                            </div>
                        </form>
                    </div>
                    <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                        <li class="nav-item toggle-nav-search hidden-caret">
                            <a class="nav-link" data-toggle="collapse" href="#search-nav" role="button" aria-expanded="false" aria-controls="search-nav">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item dropdown hidden-caret">
                                <a class="nav-link dropdown-toggle" href="#" id="notifDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-envelope"></i>
                                    <span class="notification" id="emailNotificationManager">0</span>
                                </a>
                                <ul class="dropdown-menu notif-box animated fadeIn" aria-labelledby="notifDropdown">
                                    <li>
                                        <div class="dropdown-title" id="notifTitleManager">Notification</div>
                                    </li>
                                    <li>
                                        <div class="notif-scroll scrollbar-outer" id="notifBodyManager">
                                            <div class="notif-center">
                                                <a href="#">
                                                    <div class="notif-icon notif-info"> <i class="fa fa-envelope"></i> </div>
                                                    <div class="notif-content">
                                                        <span class="block">
                                                            No Notification
                                                        </span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item dropdown hidden-caret" id="bellIcon">
                                <a class="nav-link dropdown-toggle" href="#" id="notifDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-bell"></i>
                                    <span class="notification" id="emailNotificationEmployee">0</span>
                                </a>
                                <ul class="dropdown-menu notif-box animated fadeIn" aria-labelledby="notifDropdown">
                                    <li>
                                        <div class="dropdown-title" id="notifTitleEmployee">Notification</div>
                                    </li>
                                    <li>
                                        <div class="notif-scroll scrollbar-outer" id="notifBodyEmployee">
                                            <div class="notif-center">
                                                <a href="#">
                                                    <div class="notif-icon notif-info"> <i class="fa fa-envelope"></i> </div>
                                                    <div class="notif-content">
                                                        <span class="block">
                                                            This is Notification
                                                        </span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item dropdown hidden-caret">
                            <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false">
                                <div class="avatar-sm">
                                    <img src="https://asset-a.grid.id//crop/0x0:0x0/700x465/photo/bobofoto/original/7694_foto-boredpandacom.jpg" alt="..." class="avatar-img rounded-circle">
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-user animated fadeIn">
                                <div class="dropdown-user-scroll scrollbar-outer">
                                <li>
                                    <div class="user-box">
                                        @*<div class="avatar-lg"><img src="https://asset-a.grid.id//crop/0x0:0x0/700x465/photo/bobofoto/original/7694_foto-boredpandacom.jpg" alt="image profile" class="avatar-img rounded"></div>*@
                                        <div class="u-text">
                                            <h4 id="userName1"></h4>
                                            <p class="text-muted" id="userEmail"></p>
                                            @*<a href="profile.html" class="btn btn-xs btn-secondary btn-sm">View Profile</a>*@
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    @*<div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">My Profile</a>*@
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Login/Logout" id="logout-btn">Logout</a>
                                </li>
</div>
                </ul>
                </li>
                </ul>
        </div>
        </nav>
        <!-- End Navbar -->
    </div>

    <!-- Sidebar -->
    <div class="sidebar sidebar-style-2" data-background-color="dark2">
        <div class="sidebar-wrapper scrollbar scrollbar-inner">
            <div class="sidebar-content">
                <div class="user">
                    @*<div class="avatar-sm float-left mr-2">
                        <img src="https://asset-a.grid.id//crop/0x0:0x0/700x465/photo/bobofoto/original/7694_foto-boredpandacom.jpg" alt="..." class="avatar-img rounded-circle">
                    </div>*@
                    <div class="info">
                        <a data-toggle="collapse" href="#" aria-expanded="true">
                            <span>

                                <span id="userName"></span>
                                <span class="user-level" id="userNIK">null</span>
                                <span class="user-level" id="userRole">null</span>
                            </span>
                        </a>
                        <div class="clearfix"></div>
                        @*<div class="collapse in" id="collapseExample">
                            <ul class="nav">
                                <li>
                                    <a href="#profile">
                                        <span class="link-collapse">My Profile</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#edit">
                                        <span class="link-collapse">Edit Profile</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#settings">
                                        <span class="link-collapse">Settings</span>
                                    </a>
                                </li>
                            </ul>
                        </div>*@
                    </div>
                </div>
                <ul class="nav nav-primary">
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Menu</h4>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a data-toggle="collapse" href="#base">
                                <i class="fas fa-layer-group"></i>
                                <p>Employee</p>
                                <span class="caret"></span>
                            </a>

                            <div class="collapse" id="base">
                                <ul class="nav nav-collapse">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a href="/employees/datatable">
                                                <span class="sub-item">Data</span>
                                            </a>
                                        </li>
                                    }
                                        <li>
                                            <a href="/employees/">
                                                <span class="sub-item">On Leave</span>
                                            </a>
                                        </li>
                                    </ul>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a data-toggle="collapse" href="#calendar">
                                <i class="fas fa-layer-group"></i>
                                <p>Calendar</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="calendar">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/leaves/calendar">
                                            <span class="sub-item">Data</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        <a data-toggle="collapse" href="#leave">
                            <i class="fas fa-layer-group"></i>
                            <p>Leave</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse" id="leave">
                            <ul class="nav nav-collapse">
                                <li id="indexLeave">
                                    <a href="/leaves/">
                                        <span class="sub-item">Index</span>
                                    </a>
                                </li>
                                <li id="reqLeave">
                                    <a href="/leaves/request">
                                        <span class="sub-item">Leave Request</span>
                                    </a>
                                </li>
                                @if (User.IsInRole("Manager"))
                                {
                                    <li>
                                        <a href="/leaves/approval">
                                            <span class="sub-item">Leave Approval</span>
                                        </a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a href="/leaves/quota">
                                            <span class="sub-item">Leave Quota</span>
                                        </a>
                                    </li>
                                }
                                @if (User.IsInRole("Manager") || User.IsInRole("Employee"))
                                {
                                    <li id="historyCuti">
                                        <a href="/leaves/history">
                                            <span class="sub-item">Leave History</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->


    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        @*<footer class="footer">
                <div class="container-fluid">
                    FOOTER
                </div>
            </footer>*@
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
    <script src="https://kit.fontawesome.com/10f087618c.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script src="~/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="~/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

    <!-- jQuery Sparkline -->
    <script src="~/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

    <!-- Datatables -->
    <script src="~/js/plugin/datatables/datatables.min.js"></script>

    <!-- Bootstrap Notify -->
    <script src="~/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/atlantis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

    <!-- Page level plugins -->
    <!-- Page level custom scripts -->
    @RenderSection("Scripts", required: false)
</body>

</html>