@{
    ViewData["Title"] = "Excercise 4: University Data";
    Layout = "_LayoutAdmin";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <h1 class="text-xl-center">University Data</h1>
            <button class="btn btn-primary btn-add" data-toggle="modal" data-target="#insertModal"><i class="fas fa-plus"></i><i> </i>Add Data</button>
            <table id="leaveTable" class="display table table-striped dataTable text-light">
                <thead class="text-center">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NIK</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content modal">
            <div class="modal-header border-dark bg-dark">
                <h5 class="modal-title" id="exampleModalLabel">Add Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-dark2" id="requestModalBody">
                <form class="needs-validation" id="leaveRequestForm" onsubmit="return false">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <label for="leaveNIK">NIK</label>
                                <input type="text" class="form-control" id="leaveNIK" placeholder="NIK" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                        <br />
                        <div class="form-row">
                            <div class="col">
                                <label for="leaveId">Leave ID</label>
                                <input type="text" class="form-control" id="leaveId" placeholder="leave Id" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                        <br />
                        <div class="form-row">
                            <div class="col">
                                <label for="startDate">Start Date</label>
                                <input type="date" class="form-control" id="startDate" placeholder="Start Date" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                            <div class="col">
                                <label for="endDate">End Date</label>
                                <input type="date" class="form-control" id="endDate" placeholder="End Date" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                        <br />
                        <div class="form-row">
                            <div class="col">
                                <label for="Attachment">Attachment</label>
                                <input type="text" class="form-control" id="Attachment" placeholder="Attachment" required>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                        <br />
                        <div style="text-align:right">
                            <button type="submit" class="btn btn-primary" id="btn-insert" onclick="insertUni()">Submit</button>
                            <button class="btn btn-primary" id="btn-update" onclick="updateUni()">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/leave.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
}

