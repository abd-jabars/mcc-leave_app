@{
    ViewData["Title"] = "Change Password Page";
<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.4/dist/sweetalert2.min.css">
}

<div class="form-container sign-in-container">
    <form id="changePasswordForm">
        <h5>
            Fill the form
        </h5>
        <br />
        <input id="inputEmail" type="email" placeholder="Enter your email address" />
        <input id="inputOTP" type="text" pattern="^\d+$" title="Number only" placeholder="Enter the OTP" />
        <input id="inputPassword" type="password" placeholder="Enter new password" />
        <span class="text-danger font-weight-bold">@TempData["msg"]</span>
        <button type="submit" class="button" id="forgotPasswordForm">Change Password</button>
    </form>
</div>
<div class="overlay-container">
    <div class="overlay">
        <div class="overlay-panel overlay-right">
            <h1>Change Your Password</h1>
            <p>
                Now fill the form beside to change your password before the OTP expired.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/fogotPassword.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.4/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.4/dist/sweetalert2.min.js"></script>
}