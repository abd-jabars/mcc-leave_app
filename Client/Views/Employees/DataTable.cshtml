
@{
    ViewData["Title"] = "DataTable";
    Layout = "_LayoutAdmin";
}

<div class="tableContainer">
    <div class="row">
        <button data-toggle="modal" data-target="#employeeModal" class="d-inline btn btn-success fa fa-plus ml-auto my-1" onclick="InsertModal()"> Insert new </button>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <h1 class="text-xl-center">Leave History</h1>
                <table class="table mt-sm-5" id="dataTableRegister">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>NIK</th>
                            <th>Name</th>
                            <th>Birth Date</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="employee">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" id="dataTableRegister" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="mx-auto my-1"> Insert new data </h3>
            </div>
            <form class="needs-validation" id="employeeForm">
                <div class="modal-body">
                    <div class="row">
                        <div id="form-nik" class="form-group col-md-12">
                            @*<label for="nik">NIK</label>*@
                            <input type="text" class="form-control" id="nik" hidden>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-row">
                                <div class="col">
                                    <label for="inputFirstName validationCustom01">First Name</label>
                                    <input type="text" class="form-control validationCustom01" id="firstName" placeholder="First name" pattern="^[a-zA-Z\s]+$" title="Letter only" required>
                                </div>
                                <div class="col">
                                    <label for="inputLastName">Last Name</label>
                                    <input required type="text" class="form-control" id="lastName" placeholder="Last name" pattern="^[a-zA-Z\s]+$" title="Letter only">
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <label for="inputPhone">Phone</label>
                                <input required type="text" class="form-control" id="phone" placeholder="081100110011" pattern="^\d+$">
                            </div>
                            <div class="form-group mt-3">
                                <label for="inputEmail">Email</label>
                                <input required type="email" class="form-control" id="email" placeholder="username@domain.com">
                            </div>
                            <div class="form-group mt-3">
                                <label for="inputPassword">Password</label>
                                <input type="password" class="form-control" id="password" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputBirthDate">Birth Date</label>
                                <input required type="date" class="form-control" id="birthDate">
                            </div>
                            <div class="form-group">
                                <label for="inputGender">Gender</label>
                                <select class="form-control" id="gender">
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="departmentSelect">Department</label>
                                <select class="form-control" id="departmentSelect">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputUniversity">Manager</label>
                                <input required type="text" class="form-control" id="manager" placeholder="Manager ID">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/DataTableRegister.js"></script>
}

