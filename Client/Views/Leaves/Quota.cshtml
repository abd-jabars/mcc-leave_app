@{
    ViewData["Title"] = "Quota";
    Layout = "_LayoutAdmin";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <h1 class="text-xl-center">Leave Qouta</h1>
            <form class="needs-validation" id="leaveRequestForm" onsubmit="return false">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <label for="startDate">Leave Quota <span class="year"></span></label>
                            <input type="text" class="form-control" id="leavequota" placeholder="Leave Quota" required>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                        <div class="col">
                            <label for="endDate">Mass leave <span class="year"></span></label>
                            <input type="text" class="form-control" id="massleave" placeholder="Mass leave" required disabled>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                    <br />
                    <div style="text-align:right">
                        <button type="submit" class="btn btn-primary" id="btn-insert" onclick="addQuota()">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div>
        </div>
        <div class="table-responsive">
            <h1 class="text-xl-center">Mass leave <span class="year"></span></h1>
            <table id="leaveTable" class="text-center display table table-striped dataTable">
                <tbody class="text-center">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/calendar.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
}

